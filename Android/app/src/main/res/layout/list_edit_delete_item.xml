<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageOfActivity"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:contentDescription="@string/imageOfActivity" />

            <TextView
                android:id="@+id/nameOfItem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/editItem"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:background="#00FFFFFF"
                android:contentDescription="@string/edit_activity"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/ic_edit_black_48dp" />

            <ImageButton
                android:id="@+id/deleteItem"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:background="#00FFFFFF"
                android:contentDescription="@string/delete_activity"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/ic_delete_black_48dp" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>